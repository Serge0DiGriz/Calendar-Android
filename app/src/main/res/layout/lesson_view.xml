<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/item_start_time"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="italic"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@id/item_course"
        android:layout_marginStart="8dp"
        android:text="99:99"/>

    <TextView android:id="@+id/_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="italic"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_toEndOf="@id/item_start_time"
        android:layout_centerVertical="true"
        android:text="-" />

    <TextView android:id="@+id/item_end_time"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="italic"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_alignBottom="@id/item_course"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/_" />

    <TextView android:id="@+id/item_specialty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_end_time"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:layout_marginStart="8dp" />

    <TextView android:id="@+id/item_course"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_end_time"
        android:layout_below="@id/item_specialty"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginStart="8dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_course"
        android:layout_alignTop="@id/item_course"
        android:layout_alignBottom="@id/item_course"
        android:textSize="16sp"
        android:textStyle="italic"
        android:text="курс"/>

</RelativeLayout>