<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/item_time"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="italic"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@id/item_course"
        android:layout_marginStart="4dp" />

    <TextView android:id="@+id/item_specialty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_time"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:layout_marginStart="4dp" />

    <TextView android:id="@+id/item_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_time"
        android:layout_below="@id/item_specialty"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginStart="4dp" />

</RelativeLayout>